@model IEnumerable<HandH.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @if (User.IsInRole("admin")){@Html.ActionLink("Create New", "Create")}
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @if (User.IsInRole("admin")){@Html.ActionLink("Edit", "Edit", new { id=item.ProductID })}
            @Html.ActionLink("Details", "Details", new { id=item.ProductID }) 
            @if (User.IsInRole("admin")){@Html.ActionLink("Delete", "Delete", new { id=item.ProductID })}
        </td>
    </tr>
}

</table>
