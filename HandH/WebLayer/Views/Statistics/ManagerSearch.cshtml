@model IEnumerable<ServiceLayer.DTOStat.ManagerStat>


<div id="searchresults">
    <p>
        <div>
            The total value of orders is equal  <strong>@ViewBag.totalPrice</strong>
        </div>
        
    </p>
    @if (Model != null && Model.Count() > 0)
    {
        <p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalOrderPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Percentage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AverageOrderPrice)
                    </th>
              </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalOrderPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Percentage)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AverageOrderPrice)
                        </td>
                    </tr>
                }

            </table>
        </p>
        
        
    }

</div>

