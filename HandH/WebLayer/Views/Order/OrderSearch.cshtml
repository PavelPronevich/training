@model IEnumerable<ServiceLayer.DTOModels.OrderView>


<div id="searchresults">
    @if (Model != null && Model.Count() > 0)
    {
        <p>
            <table class="table">
                <tr>
                    <th>
                        @Html.ActionLink(@Html.DisplayNameFor(model => model.ManagerName).ToString(), "Index", new { sortOrder = ViewBag.ManagerSortParm})
                    </th>
                    <th>
                        @Html.ActionLink(@Html.DisplayNameFor(model => model.CustomerName).ToString(), "Index", new { sortOrder = ViewBag.CustomerSortParm })
                    </th>
                    <th>
                        @Html.ActionLink(@Html.DisplayNameFor(model => model.ProductName).ToString(), "Index", new { sortOrder = ViewBag.ProductSortParm })
                    </th>
                    <th>
                        @Html.ActionLink(@Html.DisplayNameFor(model => model.OrderDate).ToString(), "Index", new { sortOrder = ViewBag.DateSortParm })
                    </th>
                    <th>
                        @Html.ActionLink(@Html.DisplayNameFor(model => model.Price).ToString(), "Index", new { sortOrder = ViewBag.PriceSortParm })
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ManagerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @if (User.IsInRole("admin"))
                            {@Html.ActionLink("Edit", "Edit", new { id = item.Id })}
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                            @if (User.IsInRole("admin"))
                            {@Html.ActionLink("Delete", "Delete", new { id = item.Id })}
                        </td>
                    </tr>
                }

            </table>
        </p>
        
        
    }

</div>

